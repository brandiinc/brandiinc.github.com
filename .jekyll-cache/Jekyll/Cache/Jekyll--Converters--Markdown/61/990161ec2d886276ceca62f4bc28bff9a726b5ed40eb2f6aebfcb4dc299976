<span class="n">pullRequestNameList</span> <span class="o">=</span> <span class="p">{</span>
    <span class="s">'Open'</span> <span class="p">:</span> <span class="s">'열림'</span><span class="p">,</span>
    <span class="s">'Closed'</span> <span class="p">:</span> <span class="s">'닫힘'</span><span class="p">,</span>
