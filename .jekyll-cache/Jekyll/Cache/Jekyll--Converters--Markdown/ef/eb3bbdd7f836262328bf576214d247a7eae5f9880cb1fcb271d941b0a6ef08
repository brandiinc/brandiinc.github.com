      <td><input type="checkbox" class="task-list-item-checkbox" disabled="" /></td>
      <td><input type="checkbox" class="task-list-item-checkbox" disabled="" checked="" /></td>
      <td><input type="checkbox" class="task-list-item-checkbox" disabled="" checked="" /></td>
    </tr>
